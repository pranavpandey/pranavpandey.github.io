{
    "entrypoint": "index.html",
    "shell": "src/pp-app.js",
    "sources": [
        "images/**/*",
        "assets/**/*",
        "data/**/*",
        "robots.txt"
    ],
    "extraDependencies": [
        "manifest.json",
        "node_modules/@webcomponents/webcomponentsjs/*.js",
        "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
        "node_modules/@webcomponents/webcomponentsjs/bundles/*.js"
    ],
    "builds": [
        {
          "name": "esm-bundled",
          "browserCapabilities": [
            "es2015",
            "modules"
          ],
          "js": {
            "minify": true
          },
          "css": {
            "minify": true
          },
          "html": {
            "minify": true
          },
          "bundle": true,
          "addServiceWorker": true
        },
        {
          "name": "es6-bundled",
          "browserCapabilities": [
            "es2015"
          ],
          "js": {
            "minify": true,
            "transformModulesToAmd": true
          },
          "css": {
            "minify": true
          },
          "html": {
            "minify": true
          },
          "bundle": true,
          "addServiceWorker": true
        },
        {
          "name": "es5-bundled",
          "js": {
            "minify": false,
            "compile": true,
            "transformModulesToAmd": true
          },
          "css": {
            "minify": true
          },
          "html": {
            "minify": true
          },
          "bundle": true,
          "addServiceWorker": true
        }
    ],
    "moduleResolution": "node",
    "npm": true,
    "lint": {
        "rules": [
            "polymer-3"
        ]
    }
}
